{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Debug igllama",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/bin/igllama.exe",
            "args": ["--help"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Debug simple example",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/bin/simple.exe",
            "args": ["--model_path", "path/to/model.gguf", "--prompt", "Hello!"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Debug llama-server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/bin/llama-server.exe",
            "args": ["--help"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
        }
    ]
}
